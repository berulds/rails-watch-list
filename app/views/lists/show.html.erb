<h2><%= @list.name %></h2>

<%= cl_image_tag @list.photo.key, height: 200, width: 400, crop: :fill %>

<%= link_to "See all lists", root_path, class: "btn btn-primary" %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>


<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <img src="<%= movie.poster_url %>">
  <p><%= movie.title %></p>
  <p><%= movie.rating %></p>
  <p><%= movie.overview %></p>
  <p><%= bookmark.comment if bookmark %></p>
<% end %>
